{
  "compilerOptions": {
    // "rootDir": "src",
    // "baseUrl": "src/", 
    "outDir": "lib", // 输出目录
    "sourceMap": false, // 是否生成sourceMap
    "target": "ES2015", // 编译目标
    "module": "ES2015", // 模块类型
    "moduleResolution": "node",
    "allowJs": false, // 是否编辑js文件
    "strict": true, // 严格模式
    // "noUnusedLocals": true, // 未使用变量报错
    "experimentalDecorators": true, // 启动装饰器
    "resolveJsonModule": true, // 加载json
    "forceConsistentCasingInFileNames": true, // 区分大小写
    "importHelpers": true,
    "esModuleInterop": true,
    "removeComments": false, // 删除注释
    "declaration": false,
    // "declaration": true, // 生成定义文件
    // "declarationMap": false, // 生成定义sourceMap
    // "declarationDir": "lib/types", // 定义文件输出目录
    "skipLibCheck": true,
    "lib": [
      // "esnext",
      "dom"
    ], // 导入库类型定义
    // "types": [
    //   "node"
    // ] // 导入指定类型包
  },
  "include": [
    "src/**/*" // 导入目录
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}